<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra (baixo) -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#2A000000"/>
        </shape>
    </item>

    <!-- Corpo do botÃ£o (3D) -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>

            <!-- Gradiente tipo 3D -->
            <gradient
                android:angle="270"
                android:startColor="#3A3A3A"
                android:centerColor="#2B2B2B"
                android:endColor="#1F1F1F"/>

            <!-- Borda -->
            <stroke
                android:width="1dp"
                android:color="#55FFFFFF"/>
        </shape>
    </item>

    <!-- Brilho no topo -->
    <item android:left="10dp" android:right="10dp" android:top="8dp" android:bottom="22dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient
                android:angle="270"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base glass -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <!-- branco com alpha baixo -->
            <solid android:color="#1AFFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF"/>
        </shape>
    </item>

    <!-- highlight suave no topo -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="21dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#26FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

    <!-- vinheta leve (dÃ¡ profundidade) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="420dp"
                android:centerX="0.5"
                android:centerY="0.2"
                android:startColor="#14000000"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>

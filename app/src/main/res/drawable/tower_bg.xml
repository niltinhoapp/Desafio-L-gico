<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base (vidro escuro) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="270"
                android:startColor="#1AFFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#05FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- Miolo (profundidade) -->
    <item
        android:insetLeft="7dp"
        android:insetRight="7dp"
        android:insetTop="7dp"
        android:insetBottom="7dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#12000000" />
            <stroke
                android:width="1dp"
                android:color="#22FFFFFF" />
        </shape>
    </item>

    <!-- Brilho lateral (faixa clara) -->
    <item
        android:insetLeft="10dp"
        android:insetTop="10dp"
        android:insetBottom="10dp"
        android:insetRight="22dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="0"
                android:startColor="#26FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>

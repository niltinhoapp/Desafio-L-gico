<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboardingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding_gradient"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Guias para controlar topo/rodapÃ© sem â€œvazarâ€ -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="12dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="12dp"/>

    <!-- âœ… Glass container (pager) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="1dp"
        app:strokeColor="#2BFFFFFF"
        app:cardBackgroundColor="#14FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/gTop"
        app:layout_constraintBottom_toTopOf="@id/cardTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:padding="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ”˜ Tabs em card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="1dp"
        app:strokeColor="#22FFFFFF"
        app:cardBackgroundColor="#12FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardPager"
        app:layout_constraintBottom_toTopOf="@id/cardProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:tabMode="scrollable"
            app:tabGravity="center"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:tabMaxWidth="280dp"
            app:tabPaddingStart="14dp"
            app:tabPaddingEnd="14dp"
            app:tabInlineLabel="true"
            app:tabRippleColor="#33FFFFFF" />

    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ“ˆ Progresso -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="1dp"
        app:strokeColor="#1EFFFFFF"
        app:cardBackgroundColor="#10FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardTabs"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/onboardingProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_margin="12dp"
            android:max="100"
            android:progress="0"
            android:indeterminate="false"
            android:progressTint="@android:color/white"
            android:progressBackgroundTint="#33FFFFFF" />

    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸŽ¯ CTA -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/cardProgress"
        app:layout_constraintBottom_toTopOf="@id/gBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="@string/proximo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            app:cornerRadius="18dp"
            app:backgroundTint="@color/button_default"
            app:rippleColor="#33FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            android:elevation="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

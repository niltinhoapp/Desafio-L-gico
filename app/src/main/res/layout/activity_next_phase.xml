<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutNextPhase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    android:background="@drawable/bg_next_phase_gradient"
    tools:context=".main.NextPhaseActivity">

    <!-- âœ… Container central (limita largura pra leitura ficar top) -->
    <LinearLayout
        android:id="@+id/contentBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <!-- â­ Tag discreta (AAA vibe) -->
        <TextView
            android:id="@+id/tagTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DICA RÃPIDA"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#CCFFFFFF"
            android:letterSpacing="0.08"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_pill_soft"
            tools:ignore="HardcodedText" />

        <!-- ðŸŽ‰ TÃ­tulo -->
        <TextView
            android:id="@+id/phaseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="âœ¨ Curiosidade rÃ¡pida"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mediu"
            android:shadowColor="#66000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="4"
            tools:ignore="HardcodedText" />

        <!-- ðŸ’¡ Card da curiosidade (melhora MUITO leitura no gradiente) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/curiosityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            app:cardBackgroundColor="#1AFFFFFF">

            <TextView
                android:id="@+id/curiosityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:paddingVertical="16dp"
                android:gravity="center"
                android:text="Sabia que o cÃ©rebro humano consome mais energia que qualquer outro Ã³rgÃ£o?"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/roboto_mediu"
                android:shadowColor="#55000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                tools:ignore="HardcodedText" />
        </com.google.android.material.card.MaterialCardView>

        <!-- â³ Barra discreta de 3s (combina com auto close) -->
        <ProgressBar
            android:id="@+id/autoCloseProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="14dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressTint="@color/progress_green"
            android:progressBackgroundTint="#22FFFFFF" />

        <!-- ðŸš€ BotÃ£o -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/continuar"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_mediu"
            android:paddingVertical="12dp"
            android:elevation="8dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/colorPrimary" />

        <!-- ðŸ‘‡ Texto mini (opcional) -->
        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fecha automaticamente em 3s"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_mediu"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

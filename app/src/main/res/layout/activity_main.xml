<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_default">

    <!-- Animação Lottie - ficará visível primeiro -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="323dp"
        android:layout_height="134dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/airplane_explosion1" />

    <!-- Conteúdo principal (botões), inicialmente escondido -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/beginnerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/iniciante"
            android:textSize="26sp"
            android:backgroundTint="@color/button_default"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/intermediateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/intermedi_rio"
            android:textSize="26sp"
            android:backgroundTint="@color/button_default"
            android:textColor="@color/white"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/advancedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/avan_ado"
            android:textSize="26sp"
            android:backgroundTint="@color/button_default"
            android:textColor="@color/white"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sair"
            android:textSize="20sp"
            android:backgroundTint="@color/button_default"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:clipToPadding="false"
    tools:context=".auth.LoginActivity">

    <!-- âœ… ConteÃºdo rolÃ¡vel -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/loginScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="18dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/legalLinksLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="22dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">

            <!-- ðŸ§Š Card glass premium -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginGlassCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="26dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#22FFFFFF"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="16dp"
                    android:background="@drawable/bg_glass_card">

                    <!-- â€œglowâ€ topo (premium) -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:alpha="0.85"
                        android:background="@drawable/bg_glow_top" />

                    <!-- ðŸ§  Lottie -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationView"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/ic_animationcerebro" />

                    <!-- Slogan -->
                    <TextView
                        android:id="@+id/appSloganTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_mediu"
                        android:text="@string/slogan_app_login"
                        android:textAlignment="center"
                        android:textColor="#EFFFFFFF"
                        android:textSize="20sp"
                        android:lineSpacingExtra="3dp" />

                    <!-- âœ… BotÃ£o Google PREMIUM (mantÃ©m o mesmo id do seu binding) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/signInButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:text="@string/continuar_com_google"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_mediu"
                        android:backgroundTint="@android:color/white"
                        android:textColor="#3C4043"
                        app:cornerRadius="12dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#DADCE0"
                        app:icon="@drawable/ic_google_g"
                        app:iconTint="@null"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="18dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp" />

                    <!-- Texto informativo -->
                    <TextView
                        android:id="@+id/infoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_mediu"
                        android:text="@string/use_o_bot_o_acima_para_entrar_com_sua_conta_google"
                        android:textAlignment="center"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp" />

                    <!-- Convidado -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/guestButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/entrar_como_convidado"
                        android:textAllCaps="false"
                        android:textColor="#EFFFFFFF"
                        android:fontFamily="@font/roboto_mediu"
                        android:minWidth="0dp"
                        android:paddingHorizontal="14dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:strokeWidth="0dp"
                        app:strokeColor="@android:color/transparent" />

                    <!-- Linha -->
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:alpha="0.22"
                        android:background="#FFFFFF" />

                    <!-- BenefÃ­cios -->
                    <LinearLayout
                        android:id="@+id/benefitsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/benefitsTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto_mediu"
                            android:text="@string/junte_se_a_n_s_e_aproveite"
                            android:textColor="#EFFFFFFF"
                            android:textSize="18sp" />

                        <!-- Item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_check_circle"
                                app:tint="#A5FFB1" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_mediu"
                                android:text="@string/beneficio_1_login"
                                android:textColor="#EFFFFFFF"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_check_circle"
                                app:tint="#A5FFB1" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_mediu"
                                android:text="@string/beneficio_2_login"
                                android:textColor="#EFFFFFFF"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- âœ… RodapÃ© fixo -->
    <LinearLayout
        android:id="@+id/legalLinksLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/termsOfServiceLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/termos_de_servico"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:alpha="0.92"
            android:fontFamily="@font/roboto_mediu"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:layout_marginHorizontal="2dp" />

        <TextView
            android:id="@+id/privacyPolicyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/politica_de_privacidade"
            android:textColor="#CCFFFFFF"
            android:textStyle="bold"
            android:alpha="0.92"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_mediu"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- âœ… Overlay Premium (cobre tela toda) -->
    <!-- âœ… Overlay Premium (cobre tela toda) -->
    <!-- âœ… Overlay Premium (cobre tela toda) -->
    <FrameLayout
        android:id="@+id/loginLoadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:background="@drawable/bg_loading_dim"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loadingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="22dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:background="@drawable/bg_glass_card_premium">

                <!-- Top glow -->
                <View
                    android:id="@+id/topGlow"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:alpha="0.92"
                    android:background="@drawable/bg_glow_top"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Spinner premium (substitui a Lottie) -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/loginLoadingSpinner"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="16dp"
                    android:indeterminate="true"
                    app:indicatorSize="64dp"
                    app:trackThickness="6dp"
                    app:indicatorInset="0dp"
                    app:indicatorColor="@color/theme_neon_accent"
                    app:trackColor="#22FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/topGlow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Chip seguranÃ§a -->
                <TextView
                    android:id="@+id/loginLoadingHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="ðŸ”’ ConexÃ£o segura â€¢ Login"
                    android:textColor="#CCFFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_mediu"
                    android:background="@drawable/bg_chip_glass"
                    app:layout_constraintTop_toBottomOf="@id/loginLoadingSpinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Mini â€œtimelineâ€ real: Google / Firebase / Pronto (opcional, mas fica MUITO top) -->
                <LinearLayout
                    android:id="@+id/loginProvidersRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/loginLoadingHint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/badgeGoogle"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="G"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_badge_inactive" />

                    <View
                        android:layout_width="26dp"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="#26FFFFFF" />

                    <TextView
                        android:id="@+id/badgeFirebase"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="F"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_badge_inactive" />

                    <View
                        android:layout_width="26dp"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="#26FFFFFF" />

                    <TextView
                        android:id="@+id/badgeReady"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="âœ“"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_badge_inactive" />

                </LinearLayout>

                <TextView
                    android:id="@+id/loginLoadingTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Conectandoâ€¦"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_mediu"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/loginProvidersRow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/loginLoadingText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Aguarde um instante"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_mediu"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/loginLoadingTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/loginLoadingBar"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="14dp"
                    android:indeterminate="true"
                    app:trackCornerRadius="999dp"
                    app:indicatorColor="@color/theme_neon_accent"
                    app:trackColor="#22FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/loginLoadingText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- âœ… Steps (seu bloco atual pode ficar igual) -->
                <LinearLayout
                    android:id="@+id/loginSteps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/loginLoadingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_steps_track"
                        android:alpha="0.75" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <View
                                android:id="@+id/stepGoogleDot"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bg_step_dot_inactive" />

                            <TextView
                                android:id="@+id/stepGoogleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Google"
                                android:textSize="11sp"
                                android:textColor="#B3FFFFFF"
                                android:fontFamily="@font/roboto_mediu" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <View
                                android:id="@+id/stepFirebaseDot"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bg_step_dot_inactive" />

                            <TextView
                                android:id="@+id/stepFirebaseText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Firebase"
                                android:textSize="11sp"
                                android:textColor="#B3FFFFFF"
                                android:fontFamily="@font/roboto_mediu" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <View
                                android:id="@+id/stepReadyDot"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bg_step_dot_inactive" />

                            <TextView
                                android:id="@+id/stepReadyText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Pronto"
                                android:textSize="11sp"
                                android:textColor="#B3FFFFFF"
                                android:fontFamily="@font/roboto_mediu" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



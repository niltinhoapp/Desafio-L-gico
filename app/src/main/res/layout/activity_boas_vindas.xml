<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerBoasVindas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="24dp">

    <!-- Guideline pra manter o layout bonito em telas diferentes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"/>

    <!-- âš™ï¸ Settings (glass) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/open"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:cornerRadius="22dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/settings_card_stroke"
        app:rippleColor="@color/white_20"
        app:backgroundTint="@color/settings_card_bg"
        app:icon="@drawable/ic_settings"
        app:iconSize="22dp"
        app:iconTint="@color/settings_chevron_tint"
        app:iconGravity="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ¨ Glow do avatar (fica atrÃ¡s do card) -->
    <View
        android:id="@+id/avatarGlow"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:alpha="0.55"
        android:background="@drawable/bg_glow_gold"
        app:layout_constraintTop_toTopOf="@id/avatarCard"
        app:layout_constraintBottom_toBottomOf="@id/avatarCard"
        app:layout_constraintStart_toStartOf="@id/avatarCard"
        app:layout_constraintEnd_toEndOf="@id/avatarCard" />


    <!-- Avatar com â€œanelâ€ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatarCard"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/settings_card_stroke"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/settings_card_bg"
        app:layout_constraintTop_toBottomOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/userAvatarImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="@string/avatar_image" />
    </com.google.android.material.card.MaterialCardView>

    <!-- SaudaÃ§Ã£o -->
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/ol_jogador"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:letterSpacing="0.01"
        app:layout_constraintTop_toBottomOf="@id/avatarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="OlÃ¡, Player ðŸ‘‹" />

    <!-- Subtexto -->
    <TextView
        android:id="@+id/userSubtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Pronto para mais um desafio?"
        android:textColor="@color/settings_chevron_tint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/userNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ… RESUMO RÃPIDO (PRO) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/settings_card_stroke"
        app:cardBackgroundColor="@color/settings_card_bg"
        app:layout_constraintTop_toBottomOf="@id/userSubtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- âœ… Stats Row: PontuaÃ§Ã£o / NÃ­vel / Streak -->
        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="14dp">

            <!-- Coluna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtTotalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:text="12.340" />

                <TextView
                    android:id="@+id/lblTotalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="PontuaÃ§Ã£o"
                    android:textColor="@color/settings_chevron_tint"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Divisor -->
            <View
                android:id="@+id/divider1"
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:alpha="0.45"
                android:background="@android:color/white" />

            <!-- Coluna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtNivelAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciante"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="Experiente" />

                <TextView
                    android:id="@+id/lblNivelAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="NÃ­vel"
                    android:textColor="@color/settings_chevron_tint"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Divisor -->
            <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:alpha="0.45"
                android:background="@android:color/white" />

            <!-- Coluna 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:text="7" />

                <TextView
                    android:id="@+id/lblStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Streak"
                    android:textColor="@color/settings_chevron_tint"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    <!-- âœ… Continuar (CTA 1) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/button_default"
        app:rippleColor="@color/white_20"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/statsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ… NOVO JOGO (CTA 2 / secundÃ¡rio) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/novo_jogo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/settings_card_bg"
        app:strokeWidth="1dp"
        app:strokeColor="@color/settings_card_stroke"
        app:rippleColor="@color/white_20"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ… Mapa / NÃ­veis (atalho) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMapa"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="Mapa / NÃ­veis"
        android:textAllCaps="false"
        android:textColor="@color/settings_chevron_tint"
        app:rippleColor="@color/white_20"
        app:layout_constraintTop_toBottomOf="@id/btnNewGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>




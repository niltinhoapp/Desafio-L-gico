<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerBoasVindas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="24dp">

    <!-- âš™ï¸ BotÃ£o Settings (Ã­cone, sem borda) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/open"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:cornerRadius="22dp"
        app:strokeWidth="0dp"
        app:rippleColor="@color/white_20"
        app:backgroundTint="@android:color/transparent"
        app:icon="@drawable/ic_settings"
        app:iconSize="22dp"
        app:iconTint="@color/settings_chevron_tint"
        app:iconGravity="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Avatar com â€œanelâ€ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatarCard"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="110dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/settings_card_stroke"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/settings_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/userAvatarImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="@string/avatar_image" />
    </com.google.android.material.card.MaterialCardView>

    <!-- SaudaÃ§Ã£o -->
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/ol_jogador"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        app:layout_constraintTop_toBottomOf="@id/avatarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="OlÃ¡, Player ðŸ‘‹" />

    <!-- Subtexto (opcional, deixa mais â€œpremiumâ€) -->
    <TextView
        android:id="@+id/userSubtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Pronto para mais um desafio?"
        android:textColor="@color/settings_chevron_tint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/userNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ… NOVO JOGO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/novo_jogo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/button_default"
        app:rippleColor="@color/white_20"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/userSubtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

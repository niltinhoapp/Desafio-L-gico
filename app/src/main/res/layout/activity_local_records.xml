<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rewards_gradient">

    <!-- Container central: limita largura em tablet e mantÃ©m padding de design.
         Insets (status/nav) vocÃª aplica via cÃ³digo aqui ou no root. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Card ocupa o espaÃ§o entre topo e o botÃ£o (responsivo) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recordsCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#33FFFFFF"
            app:cardBackgroundColor="#1E233A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnShare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ† Recordes"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/roboto_mediu"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/bestStreakTodayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ðŸ”¥ Melhor streak do dia: 0"
                        android:textColor="#E6FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_mediu"
                        tools:ignore="HardcodedText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:alpha="0.2"
                        android:background="#FFFFFF"/>

                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="ðŸ“Œ Por nÃ­vel (pontos / tempo mÃ©dio)"
                        android:textColor="#CCFFFFFF"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_mediu"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/levelsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#E6FFFFFF"
                        android:textSize="15sp"
                        android:lineSpacingExtra="3dp"
                        android:fontFamily="@font/roboto_mediu"
                        android:text="Iniciante: 0 pts â€¢ 00:00&#10;IntermediÃ¡rio: 0 pts â€¢ 00:00&#10;AvanÃ§ado: 0 pts â€¢ 00:00&#10;Experiente: 0 pts â€¢ 00:00"
                        tools:ignore="HardcodedText"/>
                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:alpha="0.2"
                        android:background="#FFFFFF"/>

                    <TextView
                        android:id="@+id/weeklySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="ðŸ† Campeonato Semanal"
                        android:textColor="#CCFFFFFF"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_mediu"/>

                    <TextView
                        android:id="@+id/weeklySummaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#E6FFFFFF"
                        android:textSize="15sp"
                        android:lineSpacingExtra="3dp"
                        android:fontFamily="@font/roboto_mediu"
                        android:text="Carregando..." />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWeeklyDetails"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ver detalhes do campeonato"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        app:strokeColor="#33FFFFFF"
                        app:strokeWidth="1dp"
                        app:cornerRadius="18dp"
                        app:backgroundTint="@android:color/transparent" />
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="ðŸ“¤ Compartilhar placar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="30dp"
            app:backgroundTint="@color/button_default"
            app:layout_constraintTop_toBottomOf="@id/recordsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Voltar"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#FF5722"
            app:layout_constraintTop_toBottomOf="@id/btnShare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

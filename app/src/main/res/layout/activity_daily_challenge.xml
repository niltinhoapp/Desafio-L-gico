<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDaily"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0F1020">

    <TextView
        android:id="@+id/titleDaily"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/daily_title"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/subtitleDaily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_subtitle"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/titleDaily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleDaily"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/timerBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="100"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:progressTint="#259B29"
        android:progressBackgroundTint="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/subtitleDaily"
        app:layout_constraintStart_toEndOf="@id/progressText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/questionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:layout_marginTop="18dp"
        android:text="@string/daily_question_placeholder"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:background="#1F2340"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6dp"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/timerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_option_1"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_default"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_option_2"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_default"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/opt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_option_3"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_default"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/opt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_option_4"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_default"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/opt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/resultBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/timerBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/badgeImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/daily_badge_desc"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_result_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_result_text_placeholder"
            android:textColor="#E6FFFFFF"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/xpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_xp_placeholder"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="6dp"/>

        <!-- ✅ NOVO: Volte amanhã -->
        <TextView
            android:id="@+id/comeBackTomorrowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_come_back_tomorrow"
            android:textColor="#CCFFFFFF"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_back_to_menu"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/button_default"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

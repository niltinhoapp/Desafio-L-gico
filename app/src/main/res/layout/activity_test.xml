<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutTest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_test_gradient"
    tools:context=".main.TestActivity">

    <!-- ðŸ¾ Pet ao lado do Avatar -->
    <ImageView
        android:id="@+id/petView"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logoImageView"
        tools:srcCompat="@drawable/pet_owl_1" />

    <!-- ðŸ‘¤ Avatar do UsuÃ¡rio -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/avatar_do_jogador"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- ðŸ§  Nome do Jogador -->
    <TextView
        android:id="@+id/welcomeUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_mediu"
        android:maxLines="1"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="@string/username"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logoImageView"
        app:layout_constraintBottom_toTopOf="@id/levelTextViewWrapper" />

    <!-- ðŸ… NÃ­vel (mantive o wrapper que vocÃª jÃ¡ usa pra inflar/trocar) -->
    <FrameLayout
        android:id="@+id/levelTextViewWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ… CONTAINER do conteÃºdo (Scroll + Lottie sobreposto) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/levelTextViewWrapper"
        app:layout_constraintBottom_toTopOf="@id/statusIndicatorsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ“œ Ãrea de Perguntas -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/gameElementsScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/gameElements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp">

                <!-- ðŸ§© Pergunta -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/questionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="@color/button_default"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#33FFFFFF"
                    app:strokeWidth="1dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/questionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="100dp"
                        android:padding="20dp"
                        android:text="@string/qual_a_capital_da_fran_a"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_mediu"
                        android:shadowColor="#99000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4" />
                </com.google.android.material.card.MaterialCardView>

                <!-- âœ… Os botÃµes de resposta entram aqui via inflateOptionButtons() -->

                <!-- âœ… EspaÃ§ador (evita que a Ãºltima resposta fique â€œatrÃ¡sâ€ do HUD) -->
                <View
                    android:id="@+id/bottomSpacer"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- âœˆï¸ Lottie Intro (fica por cima do Scroll quando visÃ­vel) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/airplane_explosion1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ðŸ§­ Indicadores -->
    <LinearLayout
        android:id="@+id/statusIndicatorsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#202A44"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/adContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tempo -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_mediu"
            tools:text="00:30" />

        <!-- Barra de tempo -->
        <ProgressBar
            android:id="@+id/timerProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/progress_green" />

        <!-- PontuaÃ§Ã£o e Streak -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/scoreTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableStartCompat="@drawable/ic_star_points"
                android:drawablePadding="6dp"
                android:text="@string/pontos_format"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_mediu"
                app:drawableTintMode="screen"
                app:drawableTint="@color/progress_green" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/streakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="ðŸ”¥ Streak: 0"
                android:textColor="@color/yellow_streak"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_mediu"
                android:shadowColor="#99000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />
        </LinearLayout>

        <!-- â­ Progresso para fase secreta -->
        <LinearLayout
            android:id="@+id/secretProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/secretProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rumo Ã  fase secreta: 0/10"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_mediu" />

            <ProgressBar
                android:id="@+id/secretProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:max="10"
                android:progress="0"
                android:progressTint="@color/yellow_streak"
                android:progressBackgroundTint="#33FFFFFF" />
        </LinearLayout>

        <!-- Moedas e Perguntas Restantes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/coinsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableStartCompat="@drawable/ic_coin_small"
                android:drawablePadding="4dp"
                android:text="@string/moedas_0"
                android:textColor="@color/gold_color"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_mediu"
                app:drawableTintMode="screen"
                app:drawableTint="@color/gold_color" />

            <TextView
                android:id="@+id/questionsRemainingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perguntas_restantes_format"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_mediu" />
        </LinearLayout>

    </LinearLayout>

    <!-- âœ… Banner FIXO (nÃ£o corta) -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#141B2C"
        android:clipToPadding="false"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Onde o AdView entra (via cÃ³digo) -->
        <FrameLayout
            android:id="@+id/adInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <!-- ðŸŽ‰ Efeito Konfetti (overlay) -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ§© Overlay AAA -->
    <FrameLayout
        android:id="@+id/overlayContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

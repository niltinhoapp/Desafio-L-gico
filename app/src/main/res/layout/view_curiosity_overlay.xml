<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curiosityOverlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bg_onboarding_gradient"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/curiosityCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="#33000000"
        app:cardBackgroundColor="#1E1E1E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- ✅ Scroll só no texto (não no card inteiro) -->
            <ScrollView
                android:id="@+id/curiosityScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls"
                android:scrollbars="vertical"
                android:maxHeight="260dp">

                <TextView
                    android:id="@+id/curiosityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:text="Curiosidade aqui"
                    android:textColor="#568C16"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </ScrollView>

            <TextView
                android:id="@+id/curiosityHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text="Toque para continuar"
                android:textColor="#B3FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>

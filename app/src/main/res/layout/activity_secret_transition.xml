<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSecret"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_secret_transition">

    <!-- Container central (tablet-friendly). Insets via código aqui. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="26dp"
        android:paddingBottom="22dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Guideline para manter uma área "segura" pro rodapé -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvSecretTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/secret_level_generic_title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="0.02"
            android:shadowColor="#66000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSecretSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Preparando a fase secreta…"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tvSecretTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <!-- Área da animação -->
        <FrameLayout
            android:id="@+id/animContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tvSecretSubtitle"
            app:layout_constraintBottom_toTopOf="@id/bottomArea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Um ConstraintLayout dentro pra controlar tamanho responsivo -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Glow suave (proporcional) -->
                <ImageView
                    android:id="@+id/imgGlow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.55"
                    android:src="@drawable/bg_glow_circle"
                    android:contentDescription="@null"
                    app:layout_constraintWidth_percent="0.58"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Lottie (mesma proporção do glow, levemente menor) -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieSecret"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/secret_transition_animation_desc"
                    app:lottie_rawRes="@raw/ic_animationcerebro"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_speed="1.0"
                    app:layout_constraintWidth_percent="0.56"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <!-- Rodapé: loading minimal -->
        <LinearLayout
            android:id="@+id/bottomArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/animContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ProgressBar
                android:id="@+id/progressSecret"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.85" />

            <TextView
                android:id="@+id/tvHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="⚡ Bônus ativado"
                android:textColor="#B3FFFFFF"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:gravity="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

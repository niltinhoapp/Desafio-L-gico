<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSecret"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    android:paddingTop="26dp"
    android:paddingBottom="22dp"
    android:background="@drawable/bg_secret_transition">

    <!-- Título -->
    <TextView
        android:id="@+id/tvSecretTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/secret_level_generic_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:shadowColor="#66000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtítulo leve -->
    <TextView
        android:id="@+id/tvSecretSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Preparando a fase secreta…"
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvSecretTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Container da animação (com glow atrás) -->
    <FrameLayout
        android:id="@+id/animContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvSecretSubtitle"
        app:layout_constraintBottom_toTopOf="@id/bottomArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glow suave (AAA sem atrapalhar leitura) -->
        <ImageView
            android:id="@+id/imgGlow"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:alpha="0.55"
            android:src="@drawable/bg_glow_circle"
            android:contentDescription="@null" />

        <!-- Lottie -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieSecret"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:contentDescription="@string/secret_transition_animation_desc"
            app:lottie_rawRes="@raw/ic_animationcerebro"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_speed="1.0" />
    </FrameLayout>

    <!-- Área de baixo: loading minimal -->
    <LinearLayout
        android:id="@+id/bottomArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressSecret"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.85" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="⚡ Bônus ativado"
            android:textColor="#B3FFFFFF"
            android:textSize="13sp"
            android:includeFontPadding="false"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

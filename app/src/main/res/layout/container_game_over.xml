<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game_over"
    android:padding="0dp">

    <!-- ðŸ“ Guia superior -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp" />

    <!-- ðŸŽžï¸ AnimaÃ§Ã£o Lottie -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/animation_description"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_fileName="animation_5.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <!-- ðŸ’¬ Feedback -->
    <TextView
        android:id="@+id/gameOverFeedbackTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_mediu"
        android:gravity="center"

        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/lottieAnimationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Game Over: vocÃª atingiu o limite de erros." />

    <!-- ðŸ”¢ PontuaÃ§Ã£o total -->
    <TextView
        android:id="@+id/totalScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_mediu"
        android:gravity="center"
        android:text="@string/pontuacao_total_format"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/gameOverFeedbackTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ” BotÃ£o "Tentar novamente" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/retryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="?attr/colorPrimary"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_mediu"
        android:paddingVertical="14dp"
        android:text="@string/tentar_novamente"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/totalScoreTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="320dp" />

    <!-- ðŸšª BotÃ£o "Sair" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/primary_color"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_mediu"
        android:paddingVertical="14dp"
        android:text="@string/sair"
        android:textColor="@color/background_color"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/retryButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="320dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

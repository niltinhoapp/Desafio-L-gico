<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootExpertLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_onboarding_gradient">

    <!-- Top bar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="←"
        android:textColor="@android:color/white"
        android:backgroundTint="#22FFFFFF"
        android:minWidth="56dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/10"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:alpha="0.9"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/errorsTextView"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/errorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erros: 0/3"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:alpha="0.9"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Timer bar -->
    <ProgressBar
        android:id="@+id/timerProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#FFFFFFFF"
        android:progressBackgroundTint="#33FFFFFF"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tower area (right) -->
    <FrameLayout
        android:id="@+id/progressTower"
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/timerProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/towerBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Torre"
            android:scaleType="fitXY"
            android:src="@drawable/tower_bg" />

        <!-- brilho atrás da estrela (some/mostra na animação) -->
        <ImageView
            android:id="@+id/starGlow"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="gone"
            android:alpha="0"
            android:contentDescription="Brilho"
            android:src="@drawable/bg_star_glow" />

        <!-- estrela que sobe -->
        <ImageView
            android:id="@+id/starIndicator"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom|center_horizontal"
            android:contentDescription="Estrela"
            android:src="@drawable/star_icon" />
    </FrameLayout>

    <!-- Question card -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:text="Pergunta aqui..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_daily_question_card"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:lineSpacingExtra="6dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/timerProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressTower" />

    <!-- Options container -->
    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/questionTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressTower"
        app:layout_constraintBottom_toBottomOf="parent" >


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

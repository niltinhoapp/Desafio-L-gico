<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGameOver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="#33FFFFFF"
        app:cardBackgroundColor="#1F2A44">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <!-- ✅ Use AppCompatImageView pra poder tintar sem dor -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgGameOver"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_trophy"
                android:contentDescription="@string/game_over_title"
                android:tint="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvGameOverTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/game_over_title"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgGameOver"
                app:layout_constraintTop_toTopOf="@id/imgGameOver"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvGameOverMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/game_over_message"
                android:textColor="#E6FFFFFF"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/imgGameOver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/reiniciar"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_default"
                app:cornerRadius="14dp"
                app:layout_constraintTop_toBottomOf="@id/tvGameOverMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSeeResults"
                app:layout_constraintWidth_percent="0.48" />

            <!-- ✅ sem style por atributo (evita parser chato) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeeResults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/ver_resultados"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cornerRadius="14dp"
                app:layout_constraintTop_toBottomOf="@id/tvGameOverMessage"
                app:layout_constraintStart_toEndOf="@id/btnRestart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

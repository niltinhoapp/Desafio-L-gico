<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding_gradient"
    android:paddingStart="@dimen/padding_screen_horizontal"
    android:paddingEnd="@dimen/padding_screen_horizontal"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <!-- Top bar premium -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#22FFFFFF"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/daily_brain"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Resultado Semanal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:letterSpacing="0.02"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Chips info -->
    <LinearLayout
        android:id="@+id/infoRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#18FFFFFF"
            app:strokeColor="#22FFFFFF"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/txtWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Semana: --"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:alpha="0.92"/>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#18FFFFFF"
            app:strokeColor="#22FFFFFF"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/txtAttempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Tentativas: --"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:alpha="0.92"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Card STATUS -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#141B2D"
        app:strokeColor="#2BFFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/infoRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: --"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/txtMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mínimo p/ ranking: --"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:alpha="0.82"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card MELHOR -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#141B2D"
        app:strokeColor="#2BFFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seu melhor"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.92"/>

            <TextView
                android:id="@+id/txtBest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Melhor: --"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card ÚLTIMA -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#141B2D"
        app:strokeColor="#2BFFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardBest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Última tentativa"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.92"/>

            <TextView
                android:id="@+id/txtLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Última: --"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.88"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Loader -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/cardLast"
        app:layout_constraintBottom_toBottomOf="@id/cardLast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back premium -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:text="Voltar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="18dp"
        app:backgroundTint="@android:color/transparent"
        android:background="@drawable/bg_btn_secondary_glass"
        app:strokeWidth="1dp"
        app:strokeColor="#22FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardLast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

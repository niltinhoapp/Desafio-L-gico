<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onboardingScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@color/startColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/onboardingImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:contentDescription="@string/onboarding_image_desc"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/onboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_mediu"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/onboardingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

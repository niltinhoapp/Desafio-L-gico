<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸ“± PermissÃµes essenciais -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <!-- âš™ï¸ PermissÃµes legadas (Android 12L e anteriores) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icone_ap_foreve"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_ap_foreve_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesafioLÃ³gico"
        tools:targetApi="34">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ðŸš« Evita o AdMob iniciar sozinho no cold start (Provider das libs) -->
        <provider
            android:name="com.google.android.gms.ads.MobileAdsInitProvider"
            android:authorities="${applicationId}.mobileadsinitprovider"
            tools:node="remove" />
        <!-- ðŸš« Impede o WorkManager de inicializar no cold start via AndroidX Startup -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                tools:node="remove" />
        </provider>
        <!-- ðŸš« Evita Firebase iniciar sozinho no cold start (Provider das libs) -->
        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="${applicationId}.firebaseinitprovider"
            tools:node="remove" />







        <!-- ðŸš€ Entrada do app (Launcher) -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".premium.PremiumShopActivity"
            android:exported="false"
            android:screenOrientation="portrait" />



        <activity
            android:name=".main.MapActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".main.EnigmaPortalActivity"
            android:exported="false" />




        <activity
            android:name=".main.LocalRecordsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <activity
            android:name=".main.SecretTransitionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <!-- ðŸŒ SeleÃ§Ã£o de idioma (nÃ£o Ã© launcher) -->
        <activity
            android:name=".settings.LanguageSelectionActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- ðŸ‘‹ Boas-vindas -->
        <activity
            android:name=".main.BoasVindasActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false" />




        <!-- ðŸ’¡ Onboarding -->
        <activity
            android:name=".information.OnboardingActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- ðŸ§  Principal -->
        <activity android:name=".main.MainActivity" android:exported="false" />
        <activity android:name=".main.TestActivity" android:exported="false" />
        <activity android:name=".main.ResultOrGameOverActivity" android:exported="false" />
        <activity android:name=".main.RewardsActivity" android:exported="false" />
        <activity android:name=".main.NextPhaseActivity" android:exported="false" />
        <activity android:name=".settings.DeleteAccountActivity" android:exported="false" />

        <!-- ðŸ§ Perfil -->
        <activity android:name=".profile.AvatarSelectionActivity" android:exported="false" />

        <activity
            android:name=".main.DailyChallengeActivity"
            android:exported="false" />

        <activity android:name=".main.ExpertChallengeActivity"
            android:exported="false" />


        <!-- ðŸŒ Termos -->
        <activity android:name=".auth.WebViewActivity" android:exported="false" />

        <!-- ðŸ”” Firebase Notifications -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <!-- ðŸ“¢ AdMob Config -->
        <meta-data
        android:name="com.google.android.gms.ads.APPLICATION_ID"
        android:value="${ADMOB_APP_ID}" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <!-- ðŸ§© AdServices compatÃ­vel (Android 13+) -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

    </application>
</manifest>
